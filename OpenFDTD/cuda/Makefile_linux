CC      = nvcc
CFLAGS  = -O2 -I../include
#CFLAGS  += -D_VECTOR
#CFLAGS  += -D_DOUBLE
#CFLAGS  += -D_ID32
CCOPT   = -Xcompiler "-std=c99"
LDFLAGS = -O2
LIBS    =

$(PROGRAM): $(OBJS)
	@echo "Loading $(PROGRAM) ... "
	@$(CC) -o $(PROGRAM) $(LDFLAGS) $(OBJS) $(LIBS)

.SUFFIXES: .cu

setup.o: ../src/setup.c
	$(CC) -c $(CFLAGS) $(CCOPT) $?
setupId.o: ../src/setupId.c
	$(CC) -c $(CFLAGS) $(CCOPT) $?
calcFar1d.o: ../src/calcFar1d.c
	$(CC) -c $(CFLAGS) $(CCOPT) $?
calcFar2d.o: ../src/calcFar2d.c
	$(CC) -c $(CFLAGS) $(CCOPT) $?

.cu.o:
	$(CC) -c $(CFLAGS) $<

clean:
	rm -f *.o
