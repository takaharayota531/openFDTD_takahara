CC      = mpincc
CFLAGS  = -O2 -I../include -Wall
CFLAGS  += -fdiag-vector=0 -fdiag-parallel=0
CFLAGS  += -D_VECTOR
#CFLAGS  += -D_DOUBLE
#CFLAGS  += -D_ID32
LDFLAGS = -O2 $(OMPOPT)
LDFLAGS += -static-nec
LIBS    =

$(PROGRAM): $(OBJS)
	@echo "Loading $(PROGRAM) ... "
	@$(CC) $(LDFLAGS) -o $(PROGRAM) $(OBJS) $(LIBS)

Main.o: Main.c
	$(CC) -c $(CFLAGS) $(OMPOPT) $?
comm.o: comm.c
	$(CC) -c $(CFLAGS) $(MPIOPT) $?

.c.o:
	$(CC) -c $(CFLAGS) $<

clean:
	rm -f *.o
