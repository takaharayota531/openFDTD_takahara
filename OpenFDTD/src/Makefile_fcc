CC      = fcc
CFLAGS  = -Nclang -Ofast -I../include $(OMPOPT)
CFLAGS  += -D_VECTOR
#CFLAGS  += -Rpass=.*
#CFLAGS  += -ffj-src
#CFLAGS  += -ffj-lst=t
#CFLAGS  += -D_DOUBLE
#CFLAGS  += -D_ID32
LDFLAGS = $(OMPOPT)
LIBS    = -Nlibomp

$(PROGRAM): $(OBJS)
	@echo "Loading $(PROGRAM) ... "
	@$(CC) $(LDFLAGS) -o $(PROGRAM) $(OBJS) $(LIBS)

.c.o:
	$(CC) -c $(CFLAGS) $<

clean:
	rm -f *.o
